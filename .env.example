# Копируйте в .env и заполните значения.
# Docker Compose (для синхронизации restart.sh и docker compose up/logs)
COMPOSE_PROJECT_NAME=pharmaturk

# Для продакшена используйте .env.production.example и заполните все переменные.

# База и брокер
DATABASE_URL=postgres://pharmaturk:pharmaturk@localhost:5433/pharmaturk
REDIS_URL=redis://localhost:6379/0
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=1

# AI (OpenAI, Qdrant, R2 для медиа)
OPENAI_API_KEY=sk-...
AI_MODEL=gpt-4o-mini
AI_VISION_MODEL=gpt-4o-mini
AI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant (векторная БД для RAG)
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# R2 (Cloudflare) — для медиа и AI (изображения товаров)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=
R2_USE_SSL=true
