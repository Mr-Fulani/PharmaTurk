# Пример переменных для продакшена.
# Скопируйте в .env на сервере и заполните значения.

# === Django ===
DJANGO_DEBUG=0
DJANGO_SECRET_KEY=сгенерируйте-длинный-секретный-ключ
DJANGO_ALLOWED_HOSTS=pharmaturk.ru,www.pharmaturk.ru,api.pharmaturk.ru

# Домены для CSRF и CORS (через запятую, с протоколом)
CSRF_TRUSTED_ORIGINS=https://pharmaturk.ru,https://www.pharmaturk.ru
CORS_ALLOWED_ORIGINS=https://pharmaturk.ru,https://www.pharmaturk.ru

# === База и брокер ===
DATABASE_URL=postgres://user:password@postgres:5432/pharmaturk
REDIS_URL=redis://redis:6379/0

# === OpenSearch (поиск) ===
OPENSEARCH_URL=http://opensearch:9200

# === Qdrant (рекомендации) ===
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# === Frontend: публичный URL API (для запросов с клиента) ===
NEXT_PUBLIC_API_BASE=https://api.pharmaturk.ru/api

# === R2 (Cloudflare) — медиа и изображения ===
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=
R2_USE_SSL=true

# === AI (опционально) ===
OPENAI_API_KEY=
AI_MODEL=gpt-4o-mini
AI_VISION_MODEL=gpt-4o-mini
AI_EMBEDDING_MODEL=text-embedding-3-small

# === Мониторинг (опционально) ===
SENTRY_DSN=

# === VAPI (опционально) ===
VAPI_BASE_URL=https://api.vapi.co
VAPI_API_KEY=

# === CoinRemitter (криптоплатежи) ===
# См. CRYPTO_PAYMENTS.md для подробной инструкции
COINREMITTER_API_KEY=
COINREMITTER_API_PASSWORD=
COINREMITTER_COIN=USDTTRC20
# URL backend (для webhook). Должен быть публично доступен по HTTPS
SITE_URL=https://api.pharmaturk.ru
# URL фронтенда (редирект после оплаты)
FRONTEND_SITE_URL=https://pharmaturk.ru

# === Gunicorn (опционально) ===
GUNICORN_WORKERS=4

# === Логи ===
LOG_LEVEL=INFO
LOG_FORMAT=json
